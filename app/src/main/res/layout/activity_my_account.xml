<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:background="@color/white"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyAccountActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/profileTopConstraintLayout"
        android:background="@color/purple_200"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="220dp">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/profileImageView"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_baseline_account_circle_24"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="80dp"
            android:layout_height="80dp">
        </androidx.appcompat.widget.AppCompatImageView>
        <TextView
            android:id="@+id/usernameTextView"
            android:layout_marginTop="16dp"
            android:text="Coding Ambitions"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            app:layout_constraintTop_toBottomOf="@id/profileImageView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/mobileTextView"
            android:layout_marginTop="16dp"
            android:text="+911234567890"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintTop_toBottomOf="@id/usernameTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/emailTextView"
            android:text="codingambitions@gmail.com"
            android:textColor="@color/white"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            app:layout_constraintTop_toBottomOf="@id/mobileTextView"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_margin="16dp"
            android:id="@+id/editImageView"
            android:tint="@color/white"
            app:srcCompat="@drawable/ic_baseline_edit_24"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginTop="20dp"
            android:layout_width="24dp"
            android:layout_height="24dp">
        </androidx.appcompat.widget.AppCompatImageView>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:paddingHorizontal="10dp"
        android:paddingVertical="10dp"
        android:background="#CDCDCD"
        android:id="@+id/profileBelowTopConstraintLayout"
        app:layout_constraintTop_toBottomOf="@id/profileTopConstraintLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/myOrdersCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/myOrdersTextView"
                    android:text="My Orders"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginVertical="16dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/myOrdersTextView"
                    android:id="@+id/dividerView1"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <TextView
                    android:layout_marginTop="16dp"
                    android:textColor="@color/purple_200"
                    android:id="@+id/viewAllOrdersTextView"
                    android:text="VIEW ALL ORDERS"
                    app:layout_constraintTop_toBottomOf="@id/dividerView1"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
        <androidx.cardview.widget.CardView
            android:layout_marginTop="10dp"
            app:layout_constraintTop_toBottomOf="@id/myOrdersCardView"
            android:id="@+id/myWishlistCardView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:padding="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/myWishlistTextView"
                    android:text="My Wishlist"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintLeft_toLeftOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
                <View
                    android:layout_marginVertical="16dp"
                    android:background="@android:color/darker_gray"
                    app:layout_constraintTop_toBottomOf="@id/myWishlistTextView"
                    android:id="@+id/dividerView2"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"/>
                <TextView
                    android:layout_marginTop="16dp"
                    android:textColor="@color/purple_200"
                    android:id="@+id/viewYourWishlistTextView"
                    android:text="VIEW YOUR WISHLIST"
                    app:layout_constraintTop_toBottomOf="@id/dividerView2"
                    app:layout_constraintRight_toRightOf="parent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/notifCOnstraintLayout"
        app:layout_constraintTop_toBottomOf="@id/profileBelowTopConstraintLayout"
        android:padding="16dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/notifImageView"
            app:srcCompat="@drawable/ic_baseline_notifications_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:text="Notification Preferences"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/notifImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/notifCOnstraintLayout"
        android:id="@+id/dividerView3"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/settingsCOnstraintLayout"
        app:layout_constraintTop_toBottomOf="@id/dividerView3"
        android:padding="16dp"
        android:background="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/settingsImageView"
            app:srcCompat="@drawable/ic_baseline_settings_24"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_width="24dp"
            android:layout_height="24dp"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:text="Account Settings"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toRightOf="@id/settingsImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
    <View
        android:background="@android:color/darker_gray"
        app:layout_constraintTop_toBottomOf="@id/settingsCOnstraintLayout"
        android:id="@+id/dividerView4"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
</androidx.constraintlayout.widget.ConstraintLayout>